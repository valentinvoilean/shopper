<header role="banner" class="mainHeader header">
  <div class="headerTop hidden-xs">
    <div class="container">
      <ul class="headerTopLeft">
        <li class="currencies headerTopLeft__item" data-ss-init="CurrenciesComponent">
          <svg class="headerTopLeft__img">
            <use xlink:href="#arrow2"></use>
          </svg>
          <ul class="headerTopLeft__options">
            <li class="active headerTopLeft__option">€EUR</li>
            <li class="headerTopLeft__option">£GBP</li>
            <li class="headerTopLeft__option">$USD</li>
          </ul>
        </li>
        <li class="countries headerTopLeft__item">
          <svg class="headerTopLeft__img">
            <use xlink:href="#arrow2"></use>
          </svg>
          <ul class="headerTopLeft__options">
            <li class="headerTopLeft__option active">English</li>
            <li class="headerTopLeft__option">Espanol</li>
          </ul>
        </li>
      </ul>

      <ul class="headerTopRight">
        {% include 'header-wish-list' %}
        {% include 'header-my-account' %}
      </ul>
    </div>
  </div>

  <div class="headerMain container">
    <div class="menuIcon menuIcon--x visible-xs" data-ss-init="MenuComponent">
      <span>toggle menu</span>
    </div>
    {% if settings.use_logo %}
    <a class="logo" href="/">
      {% if settings.use_logo_retina %}
      <img class="logo__img"
           src="{{ 'logo.png' | asset_url }}"
           srcset="{{ 'logo.png' | asset_url }} 1x, {{ 'logo_retina.png' | asset_url }} 2x"
           alt="{{ shop.name }}">
      {% else %}
      <img class="logo__img" src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}">
      {% endif %}
    </a>
    {% else %}
    <a id="site-title" href="/">
      {{ shop.name }}
    </a>
    {% endif %}
    <svg class="cart">
      <use xlink:href="#cart"></use>
    </svg>

  </div>
  <div class="headerBottom">
    <div class="topInfo"><div class="container">Info</div></div>
    <div class="breadcrumb">Navigation</div>
  </div>
</header>
